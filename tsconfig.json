{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "lib": ["es5", "es2015"],
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "lodash"
    ],
    "outDir": "./output",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
