{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": ["error", "always"],
    "eqeqeq": 2,
    "no-console": 1,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-unused-vars": [2, { "vars": "all", "args": "none" }],
    "no-use-before-define": 2,
    "no-useless-constructor": 2,
    "semi": [2, "never"],
    "comma-dangle": [2, "always-multiline"]
  }
}